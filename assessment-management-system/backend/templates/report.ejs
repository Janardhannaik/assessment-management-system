<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title><%= assessmentTitle %> - Report</title>
    <style>
      body {
        font-family: Arial, Helvetica, sans-serif;
        margin: 24px;
        color: #111;
      }
      header {
        text-align: center;
        margin-bottom: 20px;
      }
      h1 {
        margin: 0;
        font-size: 20px;
      }
      h2 {
        font-size: 16px;
        margin-top: 18px;
        border-bottom: 1px solid #ddd;
        padding-bottom: 6px;
      }
      .field {
        display: flex;
        justify-content: space-between;
        padding: 6px 0;
        border-bottom: 1px dashed #eee;
      }
      .label {
        font-weight: 600;
      }
      .note {
        font-size: 12px;
        color: #666;
      }
    </style>
  </head>
  <body>
    <header>
      <h1><%= assessmentTitle %></h1>
      <div>Session: <%= session.session_id %></div>
      <div>Generated: <%= generatedAt %></div>
    </header>

    <% sections.forEach(section => { %>
    <section>
      <h2><%= section.title %></h2>
      <% section.fields.forEach(f => { %>
      <div class="field">
        <div class="label"><%= f.label %></div>
        <div class="value"><%= f.value === null ? "—" : f.value %></div>
      </div>
      <% if (f.classification) { %>
      <div class="note">Classification: <%= f.classification %></div>
      <% } %> <% }) %>
    </section>
    <% }) %>

    <footer
      style="
        margin-top: 30px;
        border-top: 1px solid #eee;
        padding-top: 10px;
        font-size: 12px;
        color: #777;
      "
    >
      Assessment Management System — Config-driven report generator
    </footer>
  </body>
</html>
